#!/bin/bash
# postBuild

# 下载预编译的 SUMO 1.18.0（Linux 64位）
wget https://sumo.dlr.de/releases/1.18.0/sumo-1.18.0-Linux64.tar.gz
tar -xzf sumo-1.18.0-Linux64.tar.gz

# 设置环境变量
echo "export SUMO_HOME=$(pwd)/sumo-1.18.0" >> ~/.bashrc
echo "export PATH=\$PATH:$(pwd)/sumo-1.18.0/bin" >> ~/.bashrc
source ~/.bashrc
